{
  "name": "@nestor-design/ui",
  "version": "1.0.1",
  "description": "Librairie de composants UI moderne avec Tailwind CSS",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/index.css",
    "./tailwind": "./tailwind-preset.js"
  },
  "files": [
    "dist",
    "tailwind-preset.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run build:lib && npm run build:css",
    "build:lib": "tsup",
    "build:css": "tailwindcss -i ./src/index.css -o ./dist/index.css --minify",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=16.8.0 <21.0.0",
    "react-dom": ">=16.8.0 <21.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "terser": "^5.34.1"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "lucide-react": "^0.263.1",
    "tailwind-merge": "^2.2.0"
  },
  "keywords": [
    "react",
    "typescript",
    "tailwind",
    "ui-components",
    "design-system",
    "nextjs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/etan-nestor/nestor-design-ui.git"
  },
  "license": "MIT",
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}